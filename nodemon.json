{
  "restartable": "rs",
  "ignore": ["build", "node_modules/**/node_modules"],
  "verbose": true,
  "execMap": {
    "ts": "node -r ts-node/register"
  },
  "events": {
    "restart": "echo restarting app..."
  },
  "watch": ["src", "configs", "bin"],
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_TRANSPILE_ONLY": "true",
    "TS_NODE_FILES": "true"
  },
  "ext": "js,json,ts"
}
